<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d50000</item>
        <item name="colorAccent">#cfd8dc</item>
    </style>
    <style name="KirkwoodScore" parent="AppTheme">
        <item name="android:textColor">@color/home_label_color</item>
        <item name="android:textSize">@dimen/score_label_height</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="KirkwoodOther" parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/home_label_color</item>
        <item name="android:textSize">@dimen/other_label_height</item>
    </style>
    <style name="KirkwoodButton" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:background">@color/home_button_color</item>
    </style>
    <style name="OppScore" parent="AppTheme">
        <item name="android:textColor">@color/opp_label_color</item>
        <item name="android:textSize">@dimen/score_label_height</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="OppOther" parent="AppTheme">
        <item name="android:textColor">@color/opp_label_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/other_label_height</item>
    </style>
    <style name="OppButton" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/padding</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:background">@color/opp_button_color</item>
    </style>
    <style name="Score" parent="AppTheme">
        <item name="android:textColor">@color/data_text_color</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/score_data_height</item>
    </style>
    <style name="Other" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/data_text_color</item>
        <item name="android:textSize">@dimen/other_data_height</item>
    </style>
</resources>
